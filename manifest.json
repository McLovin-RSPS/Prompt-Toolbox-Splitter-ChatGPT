{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Prompt-Toolbox-Splitter-For-ChatGPT",
  "description": "prompt toolbox websites tool to send your prompts to chat GPT",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "prompt toolbox websites tool"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
